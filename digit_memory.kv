<MyLayout>
    BoxLayout:
        id: main_box_layout
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: words_output
            text: "0"
            font_size: 20
            size_hint: (1, 1)

        GridLayout:
            size_hint: (1, .5)
            cols: 3

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(7)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(8)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(9)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(4)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(5)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(6)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(1)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(2)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(3)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.number_press(0)

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "Очистить"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.clear()

            Button:
                size_hint: (.1, .1)
                font_size: 20
                text: "Поиск"
                #background_normal: ""
                background_color: (28/255, 255/255, 1/255, 1)
                on_press: root.init_search()
                on_release: root.search()